<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <filter>
        <filter-name>KirjautumisFilter</filter-name>
        <filter-class>filters.KirjautumisFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>KirjautumisFilter</filter-name>
        <url-pattern>/arkisto/*</url-pattern>
    </filter-mapping>
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/vikatila</location>
    </error-page>
    <servlet>
        <servlet-name>TestServlet</servlet-name>
        <servlet-class>servlets.TestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Kirjautuminen</servlet-name>
        <servlet-class>servlets.KirjautumisServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Reseptilistaus</servlet-name>
        <servlet-class>servlets.ReseptiListausServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReseptinLisays</servlet-name>
        <servlet-class>servlets.ReseptinLisaysServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>KayttajanLisays</servlet-name>
        <servlet-class>servlets.KayttajanLisaysServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VikatilaServlet</servlet-name>
        <servlet-class>servlets.VikatilaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Kayttajalistaus</servlet-name>
        <servlet-class>servlets.KayttajalistausServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>KayttajanTiedot</servlet-name>
        <servlet-class>servlets.KayttajanTiedotServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>KayttajanTietojenMuokkaus</servlet-name>
        <servlet-class>servlets.KayttajanTietojenMuokkausServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TestServlet</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Kirjautuminen</servlet-name>
        <url-pattern>/kirjautuminen</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Reseptilistaus</servlet-name>
        <url-pattern>/arkisto/reseptilistaus</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReseptinLisays</servlet-name>
        <url-pattern>/arkisto/reseptinlisays</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>KayttajanLisays</servlet-name>
        <url-pattern>/kayttajanlisays</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VikatilaServlet</servlet-name>
        <url-pattern>/vikatila</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Kayttajalistaus</servlet-name>
        <url-pattern>/arkisto/kayttajalistaus</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>KayttajanTiedot</servlet-name>
        <url-pattern>/arkisto/kayttajantiedot</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>KayttajanTietojenMuokkaus</servlet-name>
        <url-pattern>/arkisto/tietojenmuokkaus</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>kirjautuminen</welcome-file>
    </welcome-file-list>
</web-app>
