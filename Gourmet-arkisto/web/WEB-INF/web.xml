<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <filter>
        <filter-name>KirjautumisFilter</filter-name>
        <filter-class>filters.KirjautumisFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>KirjautumisFilter</filter-name>
        <url-pattern>/arkisto/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>TestServlet</servlet-name>
        <servlet-class>servlets.TestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Kirjautuminen</servlet-name>
        <servlet-class>servlets.KirjautumisServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Reseptilistaus</servlet-name>
        <servlet-class>servlets.ReseptiListausServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TestServlet</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Kirjautuminen</servlet-name>
        <url-pattern>/kirjautuminen</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Reseptilistaus</servlet-name>
        <url-pattern>/arkisto/reseptilistaus</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>kirjautuminen</welcome-file>
    </welcome-file-list>
</web-app>
